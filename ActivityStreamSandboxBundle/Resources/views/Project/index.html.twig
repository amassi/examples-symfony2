{% extends 'GHActivityStreamSandboxBundle::layout.html.twig' %}
{% block headline %}Project list{% endblock headline %}
{% block content_content %}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.summary }}</td>
                <td>
                	<a href="{{ path('project_show', { 'id': entity.id }) }}">show</a> | 
                	<a href="{{ path('project_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table> 
    <a class="btn btn-primary" href="{{ path('project_new') }}">
    	Create a new entry
    </a> 
    {% endblock %}
